@page "/book-catalog"

@using System.IO
@using System.Text.Json
@inject HttpClient httpClient

@page "/booklist"

<h3>Book List</h3>

@if (books != null)
{
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Author</th>
                <th>Description</th>
                <th>Price</th>
                <th>Average Rating</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in books)
            {
                <tr>
                    <td>@book.Id</td>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td>@book.Description</td>
                    <td>@book.Price</td>
                    <td>@book.AverageRating</td>
                </tr>
            }
        </tbody>
    </table>
}

